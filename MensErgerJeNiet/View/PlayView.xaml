<Page x:Class="MensErgerJeNiet.View.PlayView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MensErgerJeNiet.View"
      xmlns:viewmodel="clr-namespace:MensErgerJeNiet.ViewModel"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:MensErgerJeNiet.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="681" d:DesignWidth="1280"
      Title="PlayView">

    <Page.Resources>
        <ResourceDictionary>
            <viewmodel:PlayViewModel x:Key="PlayViewModel" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    

    <Grid DataContext="{StaticResource PlayViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="681" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        

        <!-- Left Panel -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Red -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="62"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="62" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Ellipse Grid.Column="0" Grid.Row="0" Stroke="Black" Fill="Red" Margin="5"/>
                <TextBlock Grid.Column="2" Grid.Row="0" Style="{StaticResource Title}">Red</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource PlayViewLabel}"># Sixes</TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="1" Style="{StaticResource PlayViewValue}">countSixes</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="2" Style="{StaticResource PlayViewLabel}"># Turns</TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="2" Style="{StaticResource PlayViewValue}">countTurns</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="3" Style="{StaticResource PlayViewLabel}"># Time</TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="3" Style="{StaticResource PlayViewValue}">countTime</TextBlock>
            </Grid>


            <!-- Buttons -->
            <Grid Grid.Row="1" Background="Beige">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="52" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="52" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button Grid.Row="1" Command="" >Pause</Button>
                <Button Grid.Row="3" Command="{Binding GotoHomeViewCommand}" >Stop</Button>
            </Grid>

            <!-- Red -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="62"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="62" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Ellipse Grid.Column="0" Grid.Row="0" Stroke="Black" Fill="Red" Margin="5"/>
                <TextBlock Grid.Column="2" Grid.Row="0" Style="{StaticResource Title}">Green</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource PlayViewLabel}"># Sixes</TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="1" Style="{StaticResource PlayViewValue}">countSixes</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="2" Style="{StaticResource PlayViewLabel}"># Turns</TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="2" Style="{StaticResource PlayViewValue}">countTurns</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="3" Style="{StaticResource PlayViewLabel}"># Time</TextBlock>
                <TextBlock Grid.Column="2" Grid.Row="3" Style="{StaticResource PlayViewValue}">countTime</TextBlock>
            </Grid>
        </Grid>
        
        

        <!-- Right Panel -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Blue -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="62"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="62" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Ellipse Grid.Column="2" Grid.Row="0" Stroke="Black" Fill="Red" Margin="5"/>
                <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource Title}">Blue</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource PlayViewLabel}"># Sixes</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource PlayViewValue}">countSixes</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource PlayViewLabel}"># Turns</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="2" Style="{StaticResource PlayViewValue}">countTurns</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="3" Style="{StaticResource PlayViewLabel}"># Time</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="3" Style="{StaticResource PlayViewValue}">countTime</TextBlock>
            </Grid>

            <!-- Dobbelsteen -->
            <Grid Grid.Row="1" Background="Beige">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="52" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Width="100" Height="100" Background="Black">
                    <!-- Afbeelding Dobbelsteen -->
                </Grid>
                <Button Grid.Row="1" Command="" >Gooi</Button>
            </Grid>

            <!-- Yellow -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="62"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="62" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Ellipse Grid.Column="2" Grid.Row="0" Stroke="Black" Fill="Red" Margin="5"/>
                <TextBlock Grid.Column="0" Grid.Row="0" Style="{StaticResource Title}">Yellow</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="1" Style="{StaticResource PlayViewLabel}"># Sixes</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource PlayViewValue}">countSixes</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="2" Style="{StaticResource PlayViewLabel}"># Turns</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="2" Style="{StaticResource PlayViewValue}">countTurns</TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="3" Style="{StaticResource PlayViewLabel}"># Time</TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="3" Style="{StaticResource PlayViewValue}">countTime</TextBlock>
            </Grid>
        </Grid>

        
        
        <!-- Game Panel -->
        <Grid Grid.Column="1" Background="#FFB9A896">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- GAME START -->
            <!-- Red -->
            <Ellipse Grid.Column="0" Grid.Row="0" Stroke="Black" Fill="Red" Margin="5"/>
            <Ellipse Grid.Column="1" Grid.Row="0" Stroke="Black" Fill="Red" Margin="5"/>
            <Ellipse Grid.Column="0" Grid.Row="1" Stroke="Black" Fill="Red" Margin="5"/>
            <Ellipse Grid.Column="1" Grid.Row="1" Stroke="Black" Fill="Red" Margin="5"/>

            <!-- Blue -->
            <Ellipse Grid.Column="9" Grid.Row="0" Stroke="Black" Fill="Blue" Margin="5"/>
            <Ellipse Grid.Column="10" Grid.Row="0" Stroke="Black" Fill="Blue" Margin="5"/>
            <Ellipse Grid.Column="9" Grid.Row="1" Stroke="Black" Fill="Blue" Margin="5"/>
            <Ellipse Grid.Column="10" Grid.Row="1" Stroke="Black" Fill="Blue" Margin="5"/>

            <!-- Green -->
            <Ellipse Grid.Column="0" Grid.Row="9" Stroke="Black" Fill="Green" Margin="5"/>
            <Ellipse Grid.Column="1" Grid.Row="9" Stroke="Black" Fill="Green" Margin="5"/>
            <Ellipse Grid.Column="0" Grid.Row="10" Stroke="Black" Fill="Green" Margin="5"/>
            <Ellipse Grid.Column="1" Grid.Row="10" Stroke="Black" Fill="Green" Margin="5"/>

            <!-- Yellow -->
            <Ellipse Grid.Column="9" Grid.Row="9" Stroke="Black" Fill="Yellow" Margin="5"/>
            <Ellipse Grid.Column="10" Grid.Row="9" Stroke="Black" Fill="Yellow" Margin="5"/>
            <Ellipse Grid.Column="9" Grid.Row="10" Stroke="Black" Fill="Yellow" Margin="5"/>
            <Ellipse Grid.Column="10" Grid.Row="10" Stroke="Black" Fill="Yellow" Margin="5"/>

            
            <!-- GAME GRID -->
            <!-- Red Start -->
            <Ellipse Grid.Column="0" Grid.Row="4" Stroke="Black" Fill="#FFE29999" Margin="5"/>
            <Ellipse Grid.Column="1" Grid.Row="4" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="2" Grid.Row="4" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="3" Grid.Row="4" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="4" Grid.Row="4" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="4" Grid.Row="3" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="4" Grid.Row="2" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="4" Grid.Row="1" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="4" Grid.Row="0" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="5" Grid.Row="0" Stroke="Black" Fill="White" Margin="5"/>

            <!-- Blue Start -->
            <Ellipse Grid.Column="6" Grid.Row="0" Stroke="Black" Fill="#FF3A91E8" Margin="5"/>
            <Ellipse Grid.Column="6" Grid.Row="1" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="6" Grid.Row="2" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="6" Grid.Row="3" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="6" Grid.Row="4" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="7" Grid.Row="4" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="8" Grid.Row="4" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="9" Grid.Row="4" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="10" Grid.Row="4" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="10" Grid.Row="5" Stroke="Black" Fill="White" Margin="5"/>

            <!-- Green Start -->
            <Ellipse Grid.Column="10" Grid.Row="6" Stroke="Black" Fill="#FF8EC928" Margin="5"/>
            <Ellipse Grid.Column="9" Grid.Row="6" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="8" Grid.Row="6" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="7" Grid.Row="6" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="6" Grid.Row="6" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="6" Grid.Row="7" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="6" Grid.Row="8" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="6" Grid.Row="9" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="6" Grid.Row="10" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="5" Grid.Row="10" Stroke="Black" Fill="White" Margin="5"/>

            <!-- Yellow Start -->
            <Ellipse Grid.Column="4" Grid.Row="10" Stroke="Black" Fill="#FFC9C928" Margin="5"/>
            <Ellipse Grid.Column="4" Grid.Row="9" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="4" Grid.Row="8" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="4" Grid.Row="7" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="4" Grid.Row="6" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="3" Grid.Row="6" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="2" Grid.Row="6" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="1" Grid.Row="6" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="0" Grid.Row="6" Stroke="Black" Fill="White" Margin="5"/>
            <Ellipse Grid.Column="0" Grid.Row="5" Stroke="Black" Fill="White" Margin="5"/>

            <!-- GAME HOME -->
            <!-- Red -->
            <Ellipse Grid.Column="1" Grid.Row="5" Stroke="Black" Fill="Red" Margin="5"/>
            <Ellipse Grid.Column="2" Grid.Row="5" Stroke="Black" Fill="Red" Margin="5"/>
            <Ellipse Grid.Column="3" Grid.Row="5" Stroke="Black" Fill="Red" Margin="5"/>
            <Ellipse Grid.Column="4" Grid.Row="5" Stroke="Black" Fill="Red" Margin="5"/>

            <!-- Blue -->
            <Ellipse Grid.Column="5" Grid.Row="1" Stroke="Black" Fill="Blue" Margin="5"/>
            <Ellipse Grid.Column="5" Grid.Row="2" Stroke="Black" Fill="Blue" Margin="5"/>
            <Ellipse Grid.Column="5" Grid.Row="3" Stroke="Black" Fill="Blue" Margin="5"/>
            <Ellipse Grid.Column="5" Grid.Row="4" Stroke="Black" Fill="Blue" Margin="5"/>

            <!-- Green -->
            <Ellipse Grid.Column="9" Grid.Row="5" Stroke="Black" Fill="Green" Margin="5"/>
            <Ellipse Grid.Column="8" Grid.Row="5" Stroke="Black" Fill="Green" Margin="5"/>
            <Ellipse Grid.Column="7" Grid.Row="5" Stroke="Black" Fill="Green" Margin="5"/>
            <Ellipse Grid.Column="6" Grid.Row="5" Stroke="Black" Fill="Green" Margin="5"/>

            <!-- Yellow -->
            <Ellipse Grid.Column="5" Grid.Row="9" Stroke="Black" Fill="Yellow" Margin="5"/>
            <Ellipse Grid.Column="5" Grid.Row="8" Stroke="Black" Fill="Yellow" Margin="5"/>
            <Ellipse Grid.Column="5" Grid.Row="7" Stroke="Black" Fill="Yellow" Margin="5"/>
            <Ellipse Grid.Column="5" Grid.Row="6" Stroke="Black" Fill="Yellow" Margin="5"/>
        </Grid>
    </Grid>
</Page>
